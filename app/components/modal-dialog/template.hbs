{{#if enabled}}
<div class="modal-dialog__background" {{action 'closeModal'}}></div>
<details open class="modal-dialog" {{action 'closeModal'}}>
  <summary class="modal-dialog__title">{{title}}</summary>
  {{#if message}}
  <p class="modal-dialog__message">{{message}}</p>
  {{/if}}
  {{#if yield}}
  <p class="modal-dialog__message">{{yield}}</p>
  {{/if}}
</details>
{{/if}}
